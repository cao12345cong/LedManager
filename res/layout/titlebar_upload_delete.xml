<?xml version="1.0" encoding="utf-8"?>
<!-- 下载中心 删除状态的标题栏 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_titlebar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/titlebar"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_upload_delete_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:paddingLeft="10dp" >

        <!-- 左按钮 -->

        <LinearLayout
            android:id="@+id/ll_upload_delete_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/iv_upload_delete_titlebar_left"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_upload_goback_selector"
                android:scaleType="fitXY" />
        </LinearLayout>
        <!-- 标题 -->

        <LinearLayout
            android:id="@+id/ll_upload_delete_titlebar_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ll_upload_delete_left"
            android:clickable="true"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_upload_delete_titlebar_title"
                android:layout_width="wrap_content"
            	android:layout_height="fill_parent" 
            	android:textColor="@color/white"
            	android:textSize="14sp"
            	android:textStyle="bold"
            	android:gravity="center_vertical"/>
        </LinearLayout>
        <!-- 右按钮 -->

        <LinearLayout
            android:id="@+id/ll_upload_delete_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
             android:clickable="true"
            android:gravity="right" >

            <TextView
                android:id="@+id/tv_upload_delete_tv_titlebar_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="全选"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>